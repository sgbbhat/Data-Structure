#include <iostream>
using namespace std;

void print(int *p)
{
	int i;
	while(p != NULL)
	{
		cout<<p[i]<<endl;
		i = i++;
	}
}

int main() {
	int * p ;
	int size;
	cout<<"Size of the array : "<<endl;
	cin>>size;
	p = new int [size] ;

	for(int i=0; i<size; i++)
	{
		cin>>p[i];
	}
	print(p);
	return 0;
}
