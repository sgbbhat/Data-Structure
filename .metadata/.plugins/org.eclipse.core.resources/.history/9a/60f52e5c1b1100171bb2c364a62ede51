#include <iostream>
using namespace std;

class Person
{
public:
	void AboutMe()
	{
		cout<<"I am a person"<<endl;
	}
};

class student: Person
{
public:
	void AboutMe()
	{
		cout<<"I am a student"<<endl;
	}
};

class Engineer:Person
{
public:
	void AboutMe()
	{
		cout<<"I am an engineer"<<endl;
	}
};

int main() {
	student * n = new student();
	n->AboutMe();

	Engineer * n1 = new Engineer();
	n1->AboutMe();

	student * n2 = new Person();
	n2->AboutMe();


	return 0;
}
