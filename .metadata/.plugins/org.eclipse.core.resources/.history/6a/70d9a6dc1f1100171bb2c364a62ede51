#include <iostream>
using namespace std;

class Person
{
public:
	~Person()
	{
		cout<<"Person deleted"<<endl;
	}
	void AboutMe()
	{
		cout<<"I am a person"<<endl;
	}
};

class student:public Person
{
public:
	~student()
	{
		cout<<"Student deleted"<<endl;
	}
	void AboutMe()
	{
		cout<<"I am a student"<<endl;
	}
};

class Engineer:public Person
{
public:
	void AboutMe()
	{
		cout<<"I am an engineer"<<endl;
	}
};

int main() {
	student * n = new student();
	n->AboutMe();

	Engineer * n1 = new Engineer();
	n1->AboutMe();

	Person * n2 = new student();
	n2->AboutMe();

	return 0;
}
