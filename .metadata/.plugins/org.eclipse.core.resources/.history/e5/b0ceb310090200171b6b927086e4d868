#include <iostream>
using namespace std;

void print(int *p)
{
	for(int i=0; i<5; i++)
	{
		cout<<p[i]<<endl;
	}
}

int main() {
	int * p ;
	int size;
	cout<<"Size of the array : "<<endl;
	p = new int [] ;
	print(p);
	return 0;
}
