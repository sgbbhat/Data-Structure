#include <iostream>
using namespace std;

class Person
{
public:
	void AboutMe()
	{
		cout<<"I am a person"<<endl;
	}
};

class student: Person
{
	void AboutMe()
	{
		cout<<"I am a student"<<endl;
	}
};

class Engineer:Person
{
	student * n = new student();
};

int main() {
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
