#include <iostream>
#include <map>
using namespace std;

int main() {
	string s1;

	map<char, int> m;
	map<char, int>::iterator it;

	cout << "Insert the string to be reduced : " << endl;
	cin >> s1;

	for(int i=0; i< s1.length(); i++)
	{
		it = m.find(s1[i]);
		if(it->second > 0)
		{
			continue;
		}
		else
			m[s1] = 1;
	}

	map<char, int>::iterator it1;

	return 0;
}
